<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTipoGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:text="Tipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewValorGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            app:layout_constraintStart_toStartOf="@+id/textViewTipoGasto"
            app:layout_constraintTop_toTopOf="@+id/textViewValorGastoResult" />

        <TextView
            android:id="@+id/textViewDataGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            app:layout_constraintStart_toStartOf="@+id/textViewValorGasto"
            app:layout_constraintTop_toTopOf="@+id/textViewDataGastoResult" />

        <TextView
            android:id="@+id/textViewDataGastoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/textViewValorGastoResult"
            app:layout_constraintTop_toBottomOf="@+id/textViewValorGastoResult" />

        <TextView
            android:id="@+id/textViewDescGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            app:layout_constraintStart_toStartOf="@+id/textViewDataGasto"
            app:layout_constraintTop_toTopOf="@+id/textViewDescGastoResult" />

        <TextView
            android:id="@+id/textViewLocalGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local"
            app:layout_constraintStart_toStartOf="@+id/textViewDescGasto"
            app:layout_constraintTop_toTopOf="@+id/textViewLocalGastoResult" />

        <TextView
            android:id="@+id/textViewLocalGastoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/textViewDescGastoResult"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescGastoResult" />

        <TextView
            android:id="@+id/textViewDescGastoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/textViewDataGastoResult"
            app:layout_constraintTop_toBottomOf="@+id/textViewDataGastoResult" />

        <TextView
            android:id="@+id/textViewValorGastoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/textViewTipoGastoResult"
            app:layout_constraintTop_toBottomOf="@+id/textViewTipoGastoResult" />

        <TextView
            android:id="@+id/textViewTipoGastoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/textViewTipoGasto"
            app:layout_constraintTop_toTopOf="@+id/textViewTipoGasto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>